#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

CXXFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CXXFLAGS += -O0
else
	CXXFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
        INSTALL_PROGRAM += -s
endif

QMAKE_AFTER = -after \
	      'QMAKE_CXXFLAGS_RELEASE = $(CXXFLAGS)' \
	      'QMAKE_POST_LINK ~= s/strip/:'

build: build-stamp
build-stamp: $(QUILT_STAMPFN)
	dh_testdir

	qmake $(QMAKE_AFTER) nanonoise.pro && $(MAKE)

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	[ ! -f Makefile ] || $(MAKE) clean
	dh_prep

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs

	$(MAKE) INSTALL_ROOT=$(CURDIR)/debian/tmp install
	install -d -v -m 0755 $(CURDIR)/debian/tmp/usr/share/applications
	chmod 664 $(CURDIR)/debian/tmp/usr/share/applications/nanonoise.desktop
	install -d -v -m 0755 $(CURDIR)/debian/tmp/usr/share/pixmaps
	chmod 664 $(CURDIR)/debian/tmp/usr/share/pixmaps/nanonoise.xpm
	install -d -v -m 0755 $(CURDIR)/debian/tmp/usr/bin
	install -m 755 -p nanonoise $(CURDIR)/debian/tmp/usr/bin/nanonoise

# Build architecture-independent files here.
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs ChangeLog
	dh_installdocs -i
	dh_install -i
	dh_installman -i
	dh_compress -i --exclude=.cpp --exclude=.pri --exclude=.xpm
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs ChangeLog
	dh_installdocs -s README.md TODO.md
	dh_install -s --sourcedir=$(CURDIR)/debian/tmp
	dh_installman nanonoise.1
	dh_installmenu
	dh_link
	dh_strip
	dh_compress -a
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
